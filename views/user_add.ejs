<!DOCTYPE html>
<html lang="en">
  <%- include partials/metahead %>
  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <%- include partials/header %>
        <%- include partials/sidebar %>
      </nav>
      <!-- End: Navigation -->

      <%
        var header = 'Add'
        var action = 'add'
        if (user) {
          header = 'Edit'
          action = `edit/${user.id}`
        }
      %>

      <!-- Page Content -->
      <div id="page-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">

              <h1 class="page-header"><%= header %> <%= title %></h1>
              <!-- Alert Message -->
              <% if (errMessage) { %>
              <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= errMessage %>
              </div>
              <% } %>

              <div class="row">
                <div class="col-md-12">
                  <form action="/user/<%= action %>" method="post" role="form">
                    <div class="form-group">
                      <label>Email</label>
                      <input name="email" value="<%= user.email %>" type="text" placeholder="Email Anda.." class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>Password</label>
                      <input name="password" value="<%= user.password %>" type="password" placeholder="Password Anda.." class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>Role</label>
                      <select name="role" class="form-control">
                        <option <% if (user.role == 'admin') { %> selected <% } %> value="0">-- Select One --</option>
                        <option <% if (user.role == 'admin') { %> selected <% } %> value="admin">Admin</option>
                        <option <% if (user.role == 'user') { %> selected <% } %> value="user">User</option>
                      </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/user" class="btn btn-default">Cancel</a>
                  </form>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
      <!-- End: Page Content -->
    </div> <!-- /#wrapper -->

    <%- include partials/jsfooter %>
  </body>
</html>
