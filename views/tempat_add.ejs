<!DOCTYPE html>
<html lang="en">
  <%- include partials/metahead %>
  <body>
    <div id="wrapper">
      <!-- Navigation -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <%- include partials/header %>
        <%- include partials/sidebar %>
      </nav>
      <!-- End: Navigation -->

      <%
        var header = 'Add'
        var action = 'add'
        if (tempat) {
          header = 'Edit'
          action = `edit/${tempat.id}`
        }
      %>

      <!-- Page Content -->
      <div id="page-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">

              <h1 class="page-header"><%= header %> <%= title %></h1>
              <!-- Alert Message -->
              <% if (errMessage) { %>
              <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= errMessage %>
              </div>
              <% } %>

              <div class="row">
                <div class="col-md-12">
                  <form action="/tempat/<%= action %>" method="post" role="form">
                    <div class="form-group">
                      <label>Nama Tempat</label>
                      <input name="nama_tempat" value="<%= tempat.nama_tempat %>" type="text" placeholder="Nama Tempat.." class="form-control" required>
                    </div>
                    <div class="form-group">
                      <label>Deskripsi</label>
                      <input name="deskripsi" value="<%= tempat.deskripsi %>" type="text" placeholder="Deskripsi.." class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/tempat" class="btn btn-default">Cancel</a>
                  </form>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
      <!-- End: Page Content -->
    </div> <!-- /#wrapper -->

    <%- include partials/jsfooter %>
  </body>
</html>
